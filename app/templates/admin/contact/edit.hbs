{{page-title "Admin"}}

<AdminScreen>
  <AdminHeader />
  <AdminBar />
  <AdminForm>
    <AdminInput
      @label="Name"
      @model={{this.model}}
      @path="name"
      @placeholder="Name"
    />
    <AdminInput
      @label="Email"
      @model={{this.model}}
      @path="email"
      @placeholder="E-Mail"
    />
    <AdminTextarea @label="Message" @model={{this.model}} @path="message" />
    <AdminInputDate
      @label="Created at"
      @model={{this.model}}
      @path="createdAt"
    />
    <AdminInput @label="Updated at" @model={{this.model}} @path="updatedAt" />
  </AdminForm>
  <AdminEditActions @model={{this.model}} />
  <AdminFooter />
</AdminScreen>