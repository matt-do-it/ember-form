{{page-title "Admin"}}

<div class="flex flex-col h-screen">
  <AdminHeader />
  <AdminBar />

  <div class="container mx-auto mt-4 flex-none flex flex-col">
    <div class="flex items-center justify-between">
      <div class="">
        <AdminSearch
          @value={{this.parent.filter}}/>
      </div>
      <div class="">
        <AdminPageSize
          @limit={{this.parent.limit}}
          @updateLimit={{this.parent.updateLimit}}/>
      </div>
    </div>
  </div>
  <AdminForm>
    <AdminTable
      @columns={{this.parent.columns}}
      @sort={{this.parent.sort}}
      @rows={{this.model}}
      @selection={{this.parent.selection}}
      @updateSort={{this.parent.updateSort}}
      @updateSelection={{this.parent.updateSelection}}
    />
    </AdminForm>
  <AdminIndexActions
    @offset={{this.parent.offset}}
    @limit={{this.parent.limit}}
    @totalRecords={{this.parent.totalRecords}}
    @updateOffset={{this.parent.updateOffset}}
    @createRecord={{this.parent.createRecord}}/>
</div>