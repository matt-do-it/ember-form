<div class="flex-none border-t border-base-300">
  <div class="container mx-auto mt-4 mb-4 flex flex-col">

    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <button
          class="btn btn-sm btn-primary"
          type="button"
          {{on "click" @createRecord}}
        >Hinzuf√ºgen</button>
      </div>
      <div class="flex items-center gap-4">
        <div class="text-sm">
          {{#if (gt this.args.totalRecords 0)}}
            Zeige
            {{this.offsetFormatted}}
            bis
            {{this.offsetNextFormatted}}
            von
            {{this.args.totalRecords}}
          {{/if}}
        </div>
        {{#if (gt this.pageList.length 1)}}
          <div class="join">
            {{#each this.pageList as |page|}}
              <button
                class="join-item btn btn-sm {{if page.isActive 'btn-active'}}"
                {{on "click" (fn this.updateOffset page.offset)}}
              >{{page.title}}</button>

            {{/each}}
          </div>
        {{/if}}
      </div>
    </div>

  </div>
</div>