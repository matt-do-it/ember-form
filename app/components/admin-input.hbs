<label class="form-control w-full">
  <div class="label">
    <span class="label-text">{{@label}}</span>
  </div>
  <Input
    @value={{(get @model @path)}}
    placeholder="Type here"
    class="input input-bordered input-sm w-full max-w-lg
      {{if
        (and
          (get @model (concat 'validations.attrs.' @path))
          (not (get @model (concat 'validations.attrs.' @path '.isValid')))
        )
        'input-error'
      }}"
  />
  <div class="label">
    {{#if (not (get @model (concat "validations.attrs." @path ".isValid")))}}
      <span class="label-text-alt text-error">
        {{(get @model (concat "validations.attrs." @path ".messages"))}}
      </span>
    {{/if}}
  </div>
</label>